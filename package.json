{
  "name": "ollama-chat-electron",
  "version": "1.0.0",
  "description": "Production-ready desktop chat application for Ollama AI models",
  "main": "main.js",
  "homepage": "https://github.com/yourusername/ollama-chat-electron",
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "tsc main.ts --outDir build/main",
    "build:renderer": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "test": "jest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "dist": "npm run build && electron-builder",
    "dist:dir": "npm run build && electron-builder --dir",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "husky install",
    "release": "semantic-release",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deps:update": "ncu -u && npm install",
    "clean": "rimraf build dist",
    "prepack": "npm run clean && npm run build"
  },
  "keywords": [
    "ollama",
    "chat",
    "ai",
    "electron",
    "desktop",
    "llm",
    "machine-learning"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ollama-chat-electron.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ollama-chat-electron/issues"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-updater": "^6.1.4",
    "electron-store": "^8.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "@playwright/test": "^1.39.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "semantic-release": "^22.0.5",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "npm-check-updates": "^16.14.6"
  },
  "build": {
    "appId": "com.ollama.chat",
    "productName": "Ollama Chat",
    "copyright": "Copyright Â© 2024 Your Name",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "main.js",
      "renderer.js",
      "index.html",
      "style.css",
      "ollama_chat.py",
      "package.json",
      "node_modules/**/*"
    ],
    "extraFiles": [
      {
        "from": "ollama_chat.py",
        "to": "Resources/ollama_chat.py"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Your Name"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yourusername",
        "repo": "ollama-chat-electron"
      }
    ]
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 